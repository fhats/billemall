{% extends "base_loggedin.jinja2" %}

{% block menu_overview %}class="active"{% endblock %}

{% block content %}
<h1>Overview</h1>

<br>

<div class="row-fluid add-bill-basic-form">
  <div class="span3">
    <form class="form-inline" action="add_person">
      <input type="text" class="input-small" name="people" placeholder="John Smith">
      <button type="submit" class="btn">Add to bill</button>
    </form>
  </div>
  <form class="form-inline" action="add_bill">
    <div class="span4" id="people">
      &nbsp;
    </div>
    <div class="span3 input-prepend amount-box">
      <span class="add-on">$</span>
      <input type="text" name="amount" class="input-small" placeholder="100">
    </div>
    <div class="span2 add-bill-button">
      <button type="submit" class="btn overview-add-bill-button">Add bill</button>
    </div>
</div>

<div class="row-fluid summary-row">
  <div class="span7"><div class="name">
      <a href="/user/1">Fred Hatfull</a>
  </div></div>
  <div class="span3"><div class="amount amount-positive">$3,000</div></div>
  <div class="span2 add-bill-button">
    <a class="add-to-bill-link" data-name="Fred Hatfull">Add to bill</a>
  </div>
</div>

<div class="row-fluid summary-row">
  <div class="span7"><div class="name">
      <a href="/user/2">Toby Waite</a>
  </div></div>
  <div class="span3"><div class="amount amount-negative">($1,700)</div></div>
  <div class="span2 add-bill-button">
    <a class="add-to-bill-link" data-name="Toby Waite">Add to bill</a>
  </div>
</div>
{% endblock %}
